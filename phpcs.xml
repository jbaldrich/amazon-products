<?xml version="1.0"?>
<ruleset name="AmazonProducts">

	<description>Jaco Baldrich Plugin Coding Standards.</description>

	<file>./src</file>
	<file>./tests</file>
	<file>./templates</file>

	<arg value="sp"/>
	<arg name="colors"/>

	<config name="testVersion" value="7.0-"/>
	<config name="text_domain" value="jacobaldrich-amazon-products"/>

	<rule ref="Inpsyde"/>

	<rule ref="Inpsyde.CodeQuality.FunctionBodyStart.WrongForMultiLineDeclaration">
		<severity>0</severity>
	</rule>

	<rule ref="NeutronStandard.AssignAlign.DisallowAssignAlign.Aligned">
		<severity>0</severity>
	</rule>

</ruleset>